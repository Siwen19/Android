<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--   标题  -->
    <TableRow
        android:layout_width="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="英语听力测试"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="@color/fontColor"
            android:layout_margin="10dp"/>
    </TableRow>

    <Chronometer
        android:id="@+id/ch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/timePicker"
        android:gravity="center"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"/>

    <!--    第1道题  -->
    <TableRow
        android:layout_width="match_parent">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/test1"
                    android:textColor="@color/fontColor"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"/>
            </TableRow>

            <TableRow>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:id="@+id/radioGroup1">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/answer1_1"
                        android:textColor="@color/fontColor"
                        android:textSize="18dp"
                        android:id="@+id/radio1_1"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/answer1_2"
                        android:textColor="@color/fontColor"
                        android:textSize="18dp"
                        android:id="@+id/radio1_2"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/answer1_3"
                        android:textColor="@color/fontColor"
                        android:textSize="18dp"
                        android:id="@+id/radio1_3"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/answer1_4"
                        android:textColor="@color/fontColor"
                        android:textSize="18dp"
                        android:id="@+id/radio1_4"/>
                </RadioGroup>
            </TableRow>
        </TableLayout>

    </TableRow>

    <!--    第2道题  -->
    <TableRow
        android:layout_width="match_parent">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/test2"
                    android:textColor="@color/fontColor"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"/>
            </TableRow>

            <TableRow>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:id="@+id/radioGroup2">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/answer2_1"
                        android:textColor="@color/fontColor"
                        android:textSize="18dp"
                        android:id="@+id/radio2_1"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/answer2_2"
                        android:textColor="@color/fontColor"
                        android:textSize="18dp"
                        android:id="@+id/radio2_2"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/answer2_3"
                        android:textColor="@color/fontColor"
                        android:textSize="18dp"
                        android:id="@+id/radio4_3"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/answer2_4"
                        android:textColor="@color/fontColor"
                        android:textSize="18dp"
                        android:id="@+id/radio2_4"/>
                </RadioGroup>
            </TableRow>
        </TableLayout>

    </TableRow>

    <!--    第3道题  -->
    <TableRow
        android:layout_width="match_parent">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/test3"
                    android:textColor="@color/fontColor"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"/>
            </TableRow>

            <TableRow>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:id="@+id/radioGroup3">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/answer3_1"
                        android:textColor="@color/fontColor"
                        android:textSize="18dp"
                        android:id="@+id/radio3_1"/>

                    <RadioButton
                        android:id="@+id/radio3_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/answer3_2"
                        android:textColor="@color/fontColor"
                        android:textSize="18dp" />
                </RadioGroup>
            </TableRow>
        </TableLayout>

    </TableRow>

    <!--    点击提交  -->
    <TableRow
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/submit"
                android:textColor="@color/fontColor"
                android:textSize="20dp"
                android:background="@color/submitColor"
                android:layout_marginRight="5dp"
                android:id="@+id/submit"/>
        </LinearLayout>
    </TableRow>
</TableLayout>