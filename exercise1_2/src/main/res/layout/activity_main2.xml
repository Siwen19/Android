<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBody"
    android:padding="10dp"
    tools:context=".Main2Activity">
    <!--    第1行  -->
    <TableRow android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/a1"
                android:drawableRight="@mipmap/a2"
                android:background="@drawable/input_shape"
                android:padding="5dp" />
        </LinearLayout>

    </TableRow>

    <!--    第2行  -->
    <TableRow
        android:layout_width="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:background="@mipmap/a3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:background="@mipmap/a4" />
        </LinearLayout>

    </TableRow>

    <!--    第3行  -->
    <TableRow
        android:layout_width="match_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:minHeight="150dp"
                android:adjustViewBounds="true"
                android:background="@mipmap/a5" />
        </LinearLayout>

    </TableRow>

    <!--    第4行  -->
    <TableRow
        android:layout_width="match_parent" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/shape"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/kuaijiejian"
                android:textColor="@color/colorText"
                android:gravity="left|top"
                android:textSize="24dp"
                android:padding="25dp" />

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView"
                android:minHeight="120dp"
                android:minWidth="120dp"
                android:adjustViewBounds="true"
                android:background="@mipmap/a6"
                android:layout_margin="12dp" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView"
                android:layout_toRightOf="@id/image1"
                android:background="@mipmap/a7"
                android:minWidth="120dp"
                android:minHeight="120dp"
                android:adjustViewBounds="true"
                android:layout_margin="12dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/a8"
                android:minHeight="120dp"
                android:minWidth="120dp"
                android:layout_below="@id/textView"
                android:layout_toRightOf="@id/image2"
                android:adjustViewBounds="true"
                android:layout_margin="12dp" />


        </RelativeLayout>

    </TableRow>

</TableLayout>