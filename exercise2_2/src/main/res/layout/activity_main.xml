                android:text="@string/test2"
                android:textColor="@color/fontColor"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/radioGroup2">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/answer2_1"
                    android:textColor="@color/fontColor"
                    android:textSize="20dp"
                    android:id="@+id/radio2_1"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/answer2_2"
                    android:textColor="@color/fontColor"
                    android:textSize="20dp"
                    android:id="@+id/radio2_2"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/answer2_3"
                    android:textColor="@color/fontColor"
                    android:textSize="20dp"
                    android:id="@+id/radio2_3"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/answer2_4"
                    android:textColor="@color/fontColor"
                    android:textSize="20dp"
                    android:id="@+id/radio2_4"/>
            </RadioGroup>
        </LinearLayout>

    </TableRow>

    <!--    第3道题  -->
    <TableRow
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
