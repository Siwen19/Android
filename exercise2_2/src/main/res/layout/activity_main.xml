<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--   标题  -->
    <TableRow
        android:layout_width="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="计算小测验"
            android:gravity="center"
            android:textSize="36dp"
            android:textColor="@color/fontColor"
            android:layout_margin="20dp"/>

    </TableRow>

    <!--    第1道题  -->
    <TableRow
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="@string/test1"
                android:textColor="@color/fontColor"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/radioGroup1">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/answer1_1"
                    android:textColor="@color/fontColor"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:id="@+id/radio1_1"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/answer1_2"
                    android:textColor="@color/fontColor"
                    android:textSize="20dp"
                    android:id="@+id/radio1_2"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/answer1_3"
                    android:textColor="@color/fontColor"
                    android:textSize="20dp"
                    android:id="@+id/radio1_3"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/answer1_4"
                    android:textColor="@color/fontColor"
                    android:textSize="20dp"
                    android:id="@+id/radio1_4" />
            </RadioGroup>

        </LinearLayout>
    </TableRow>

    <!--    第2道题  -->
